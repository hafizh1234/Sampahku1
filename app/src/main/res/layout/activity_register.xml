<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/header"
    tools:context=".RegisterActivity">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_marginVertical="100dp"
        android:layout_marginHorizontal="50dp"
        android:layout_height="0dp"
        android:background="@drawable/kotak_putih"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:text="@string/nama_lengkap"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            />
        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/abdurrahman_hanifah"
            android:layout_marginVertical="36dp"
            android:layout_marginHorizontal="16dp"
            android:inputType="text"
            android:id="@+id/et_nama_lengkap"/>

        <TextView
            android:layout_width="wrap_content"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textSize="16sp"
            android:layout_marginTop="78dp"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="98dp"
            android:hint="@string/abdul_gmail_com"
            android:layout_marginHorizontal="16dp"
            android:inputType="textEmailAddress"
            android:id="@+id/et_email"/>

        <TextView
            android:layout_width="wrap_content"
            android:drawableStart="@drawable/ic_baseline_vpn_key_24"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="140dp"
            android:text="@string/password"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Abd#larrahman"
            android:layout_marginVertical="160dp"
            android:layout_marginHorizontal="16dp"
            android:inputType="textPassword"
            android:id="@+id/et_password"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_register"
            android:text="@string/daftar"
            android:layout_gravity="right"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="205dp"
            />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="36dp"
        android:text="@string/daftar_akun_baru"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>